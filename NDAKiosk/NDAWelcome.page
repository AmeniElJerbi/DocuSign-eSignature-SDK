<apex:page standardStylesheets="false" showHeader="false" action="{!ndaWelcomePageOpen}"
    sidebar="false" standardController="NDA_Signer__c" extensions="NDAKioskController">
    <apex:stylesheet value="{!URLFOR($Resource.ndaStyles, 'ndastyles.css')}" />
    <style type="text/css">
    </style>

    <h1>Welcome to ACME!</h1>
    <p>Before your visit, we ask that you complete a standard non-disclosure agreement.</p>

    <apex:form >
        <table>
            <tr>
                <td>
                    <h2>Your Name:</h2>
                </td>
                <td>
<!--                    <h2>Your Phone Number:</h2>    -->
                </td>
            </tr>
            <tr>
                <td>
                    <apex:inputField styleClass="textBox" value="{!signer.Name}"/>
                </td>
                <td>
<!--                    <apex:inputField styleClass="textBox" value="{!signer.Phone__c}" />    -->
                </td>
            </tr>
            <tr>
                <td>
                    <h2>Your Email:</h2>
                </td>
                <td></td>
            </tr>
            <tr>
                <td>
                    <apex:inputField styleClass="textBox" value="{!signer.Email__c}" />
                </td>
                <td></td>
            </tr>
        </table>
<!--
        <p>Would you like to receive a signed copy in your e-mail?</p>
        <apex:inputCheckbox styleClass="checkBox" value="{!signer.Send_Signed_Copy__c}" />Yes
-->
        <p>How would you like to verify your identity</p>
        <apex:selectRadio styleClass="radioButton" value="{!validateType}" layout="pageDirection">
            <apex:selectOptions value="{!validateItems}"/>
        </apex:selectRadio>

        <table class="top">
            <tr>
                <td class="left"><apex:commandButton styleClass="greenButton" action="{!eSign}" value="eSign with DocuSign"/></td>
                <td class="right"><apex:commandButton styleClass="linkButton" action="{!clearWelcomeFields}" value="Clear Values"/></td>
            </tr>
        </table>
        {!errmsg}

  </apex:form>

</apex:page>

